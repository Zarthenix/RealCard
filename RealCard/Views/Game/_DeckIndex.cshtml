@using RealCard.Core.DAL.Models
@model List<RealCard.Core.DAL.Models.Deck>

<div id="deckOverviewPage">
    <div class="selectHeader"><h1 >Select a Deck</h1></div>
    <div class="decks">
        @foreach (Deck d in Model)
        {
            <div class="deckSelector" data-deck-id="@d.Id">
                @d.Name
            </div>
        }
    </div>
    <div class="buttonContainer">
        <div class="createNew"><h1>Create New</h1></div>
    </div>
</div>

<script>
    var dckId;

    $('.deckSelector').click(function () {
        dckId = $(this).data("deck-id");
        $('#gameContainer').load('/AjaxDeck/GetDeckView?id=' + dckId);


        @*$.ajax({
                method: "GET",
                url: '@Url.Action("GetDeckView", "AjaxDeck")' + '?id=' + dckId,

                dataType: html
            })
            .done(function(data) {
                $('#gameContainer').html(data.data);
            })
            .fail(function(textStatus) {
                alert("Request failed: " + textStatus);
            });*@
    });
</script>