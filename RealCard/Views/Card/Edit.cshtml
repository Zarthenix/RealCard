@using RealCard.Core.DAL.Models.Enums

@{
    ViewData["Title"] = "Create";
    @model CardViewModel
}

<div class="container-fluid">
    <div class="row ">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit Card</h3>
                </div>
                <div class="card-body">
                    <form accept-charset="UTF-8" role="form" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <fieldset>
                            <input type="hidden" value="@Model.ImageId" />
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" type="text" value="@Model.Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Attack"></label>
                                <input asp-for="Attack" class="form-control" type="text" value="@Model.Attack">
                                <span asp-validation-for="Attack"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Health"></label>
                                <input asp-for="Health" class="form-control" type="text" value="@Model.Health">
                                <span asp-validation-for="Health"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Value"></label>
                                <input asp-for="Value" class="form-control" type="text" value="@Model.Value">
                                <span asp-validation-for="Value"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Type"></label>
                                <select asp-for="Type" class="form-control">
                                    @foreach (int x in Enum.GetValues(typeof(CardType)))
                                    {
                                        if (x == (int)Model.Type)
                                        {
                                            <option selected value="@x">@Enum.GetName(typeof(CardType), x)</option>
                                        }
                                        else
                                        {
                                            <option value="@x">@Enum.GetName(typeof(CardType), x)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Type"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <img src="@String.Format("data:image/gif;base64,{0}", Model.Uploader.ImageBase64String)" class="img-thumbnail" />
                                <label asp-for="Uploader"></label>
                                @Html.EditorFor(model => model.Uploader.FileRaw)
                            </div>
                            <input class="btn btn-lg btn-info btn-block" type="submit" asp-action="Edit" formmethod="post" style="margin-top: 15px">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
