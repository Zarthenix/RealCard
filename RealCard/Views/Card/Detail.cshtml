@using Microsoft.CodeAnalysis

@{
    ViewData["Title"] = "Detail";
    @model CardViewModel
}

    <div class="container offset-md-4">
        <h2>@Model.Name</h2>
        <div class="row">
            <div class="col-md-6 ">
                <img src="@String.Format("data:image/gif;base64,{0}", @Model.Uploader.ImageBase64String)" class="img-thumbnail" />
            </div>
            <div class="col-md-6">
                <h4>Type:</h4> <h4>@Model.Type.ToString()</h4>

                <h4>Attack:</h4> <h4><b>@Model.Attack</b></h4>

                <h4>Health:</h4> <h4><b>@Model.Health</b></h4>

                <h4>Description:</h4> <h4>@Model.Description</h4>

                <h4>Value:</h4> <h4>@Model.Value</h4>


            </div>
        </div>
    </div>

@section scripts
{
    <script>
        $('img').each(function(img) {
            $('<img>').on('load').attr('src', $(img).attr('src'));
        });
    </script>  
}
