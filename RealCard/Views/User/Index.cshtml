
@{
    ViewData["Title"] = "Index";
    @model RealCard.ViewModels.UserViewModel
}
    <div class="container-fluid">
        <div class="profile-container">
            <div class="profile-header row">
                <div class="col-lg-2 col-md-4 col-sm-12 text-center">
                    <img src="images/avataricon.png" alt="" class="header-avatar" />
                </div>
                <div class="col-lg-5 col-md-8 col-sm-12 profile-info">
                    <div class="header-fullname">@Model.Username</div>
                    <a href="#" class="btn btn-palegreen btn-sm  btn-follow">
                        <i class="far fa-edit"></i>
                        Edit
                    </a>
                    <div class="header-information">
                        Registered since: @Model.CreatedAt
                    </div>
                </div>
                <div class="col-lg-5 col-md-12 col-sm-12 profile-stats">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 stats-col">
                            <div class="stats-value pink">@Model.Status</div>
                            <div class="stats-title">STATUS</div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 stats-col">
                            <div class="stats-value pink">803</div>
                            <div class="stats-title">FRIENDS</div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 stats-col">
                            <div class="stats-value pink">1207</div>
                            <div class="stats-title">MATCHES</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

