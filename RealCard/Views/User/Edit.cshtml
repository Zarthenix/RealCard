@using RealCard.Models

@{
    ViewData["Title"] = "Edit";
    @model UserViewModel;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit Account</h3>
                </div>
                <div class="card-body">
                    <form accept-charset="UTF-8" role="form" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <fieldset>
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" type="text" placeholder="@Model.Username">
                                <span asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" type="text" placeholder="@Model.Email">
                                <span asp-validation-for="Email"></span>
                            </div>

                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Edit" asp-action="Edit" formmethod="post" style="margin-top: 15px">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>