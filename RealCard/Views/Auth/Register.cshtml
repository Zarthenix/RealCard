
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model RealCard.ViewModels.RegisterViewModel
}

<h2>@ViewData["Error"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Registration</h3>
                </div>
                <div class="card-body">
                    <form accept-charset="UTF-8" role="form">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" name="username" type="text">
                                <span asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" name="password" type="password">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" name="confirmpassword" type="password">
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" name="email" type="email">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Register" asp-action="Register" asp-controller="Auth" formmethod="post">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>